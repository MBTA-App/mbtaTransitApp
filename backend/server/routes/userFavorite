const express = require("express");
const router = express.Router();
const User = require("../models/userModel");

router.post("/addUserFavorite/:userId", async (req, res) => {
  try {
    const { userId } = req.params;
    const { stationId } = req.body;

    // Find the user by userId
    const user = await User.findById(userId);

    if (!user) {
      return res.status(404).json({ error: "User not found" });
    }

    // Add the stationId to the user's favorites
    user.favorites = [...new Set([...(user.favorites || []), stationId])];

    // Save the updated user document
    await user.save();

    // Respond with a success message
    res.json({ message: "Station added to favorites successfully" });
  } catch (error) {
    console.error("Error adding station to user favorites:", error);
    res.status(500).json({ error: "Internal Server Error" });
  }
});
