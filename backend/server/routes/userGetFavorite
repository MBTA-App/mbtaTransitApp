// routes/userFavorites.js
const express = require("express");
const router = express.Router();
const User = require("../models/userModel");

// Get user favorites
router.get("/getUserFavorites/:userId", async (req, res) => {
  try {
    const { userId } = req.params;

    // Fetch user favorites based on the provided userId
    const user = await User.findById(userId).populate("favorites");

    if (!user) {
      return res.status(404).json({ error: "User not found" });
    }

    // Respond with the user's populated favorites
    res.json(user.favorites);
  } catch (error) {
    console.error("Error retrieving user favorites:", error);
    res.status(500).json({ error: "Internal Server Error" });
  }
});

module.exports = router;
